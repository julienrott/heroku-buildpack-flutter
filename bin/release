#!/bin/sh

BUILD_DIR=${1:-}
# If the FLUTTER_CLEANUP is in false, or in true.
if [ -d $BUILD_DIR/build/web ]; then
    DEPLOY_DIR="/app/build/web/"
else
    DEPLOY_DIR="/app/"
fi

cat <<EOF
---
default_process_types:
    release: /app/asset/release-tasks.sh
    web: /app/dart-sdk/bin/dart pub global run dhttpd --host 0.0.0.0 --port \$PORT --path ${DEPLOY_DIR}

EOF
